{
  "env": {
    "es6": true,
    "node": true
  },
  "extends": ["prettier", "strongloop"],
  "plugins": ["prettier"],
  "rules": {
    "no-warning-comments": [
      1,
      { "terms": ["todo", "fixme", "xxx"], "location": "start" }
    ]
  },
  "parserOptions": {
    "ecmaVersion": 8,
    "comma-dangle": ["error", "only-multiline"]
  }
}
